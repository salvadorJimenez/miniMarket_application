<div class="container">
    <div id="presentation" class="row">
        <div class="col-md-offset-4 col-md-4">
            <h1>Brands</h1>
        </div>
        <div class="col-md-offset-4 col-md-4">
            <h3>Registered brands</h3>
            <ul>
                <% @brands.each do |brand| %>
                    <li>
                        <h3><%= brand.name %></h3>
                        <%= link_to "Edit", edit_brand_path(brand), class: 'btn btn-default' %>
                        <%= link_to "Delete", brand_path(brand),
                                            method: :delete,
                                            data: {confirm: "Are you sure that want to delete #{brand.name} brand?"}, 
                                            class: 'btn btn-danger' %>
                    </li>
                <% end %>
            </ul> 
        </div>
        <div>
            <%= link_to "Create a new brand",new_brand_path,class: 'btn btn-default' %>
        </div>
    </div>
    <hr class="divider">
</div>